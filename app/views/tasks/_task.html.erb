<div id="<%= dom_id task %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= task.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Due date:</strong>
    <%= task.due_date %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Completed:</strong>
    <%= task.completed %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">List:</strong>
    <%= task.list_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this task", "/lists/#{params[:list_id]}/tasks/#{task.id}", class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this task', "/lists/#{params[:list_id]}/tasks/#{task.id}/edit", class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
